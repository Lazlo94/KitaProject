<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns="http://javafx.com/javafx/23.0.1"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="huehnerstall.kitaproject.controller.MitarbeiterEditController"
          hgap="10" vgap="10" alignment="CENTER"
          style="-fx-padding: 20;">
    <Label text="Vorname:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="vornameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Nachname:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="nachnameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Telefon:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="telefonField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Strasse:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="strasseField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Hausnummer:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="hausnummerField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="PLZ:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField fx:id="plzField" GridPane.columnIndex="1" GridPane.rowIndex="6" promptText="5 Ziffern"/>

    <Label text="Ort:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <TextField fx:id="ortField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

    <Label text="Gehalt:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
    <TextField fx:id="gehaltField" GridPane.columnIndex="1" GridPane.rowIndex="8" promptText="z. B. 3500,00"/>

    <Label text="Rolle:" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
    <ComboBox fx:id="rolleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="9"/>

    <Button text="Speichern" onAction="#handleSave" fx:id="saveButton" GridPane.columnIndex="0" GridPane.rowIndex="10"/>
    <Button text="Abbrechen" onAction="#handleCancel" GridPane.columnIndex="1" GridPane.rowIndex="10"/>
</GridPane>