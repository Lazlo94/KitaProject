<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns="http://javafx.com/javafx/23.0.1"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="huehnerstall.kitaproject.controller.GruppeEditController"
          hgap="10" vgap="10" alignment="CENTER"
          style="-fx-padding: 20;">
    <Label text="Gruppenname:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="gruppenNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Standort:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <ComboBox fx:id="standortComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Button text="Speichern" onAction="#handleSave" fx:id="saveButton" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Button text="Abbrechen" onAction="#handleCancel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
</GridPane>